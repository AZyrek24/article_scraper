<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div>
        {{#each dbArticle}}
          <div class="card" style="width: 18rem;">
            <img class="card-img-top" src="{{img}}">
            <div class="card-body">
              <p class="card-text"><a href="{{link}}">{{title}}</a></p>
              <button type="button" class="btn btn-dark btn-block save-buttons">Save Article</button>
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>